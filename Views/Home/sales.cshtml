        alert("Successful login!");
    </script>
 }
 
  if (ViewBag.Message == 9)
 {
    <script language="javascript">
        alert("Product Added!");
    </script>
 }
 
 }


@model List<suity.Models.Product>
<body>

<div class="about_top">
  <div class="container">
      <div class="col-md-3">
          <ul class="menu1">
              <li class="item1">
                  <a class="">What To Buy ? </a>

              </li>
          </ul>

          <div class="box1">
              <ul class="box1_list">

                  <li><a href="~/Home/Sales">T-Shirts</a></li>

              </ul>
          </div>

      </div>
		<div class="col-md-9 content_right">
		   <div class="dreamcrub">
			   	 <ul class="breadcrumbs">
                    
                   
                    <li class="women">
                        T-Shirts
                    </li>
               </ul>
                <ul class="previous">
                    <li> <a href="~/Home/Checkout">Checkout</a>   <a href="~/Home/Logout">Logout</a> </li>
                </ul>
                <div class="clearfix"></div>
			   </div>
			   <div class="mens-toolbar">
                 <div class="sort">
               	   <div class="sort-by">
		            <label>Sort By</label>
		            <select>
		                            <option value="">
		                    Position                </option>
		                            <option value="">
		                    Name                </option>
		                            <option value="">
		                    Price                </option>
		            </select>
		            <a href=""><img src="~/Content/images/arrow2.gif" alt="" class="v-middle"></a>
                   </div>
    		     </div>
    	        <ul class="women_pagenation dc_paginationA dc_paginationA06">
			     <li><a href="#" class="previous">Page:</a></li>
			     <li class="active"><a href="#">1</a></li>
			     <li><a href="#">2</a></li>
		  	    </ul>
                <div class="clearfix"></div>		
		        </div>		
				<div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
					<div class="cbp-vm-options">
						<a href="#" class="cbp-vm-icon cbp-vm-grid cbp-vm-selected" data-view="cbp-vm-view-grid" title="grid">Grid View</a>
						<a href="#" class="cbp-vm-icon cbp-vm-list" data-view="cbp-vm-view-list" title="list">List View</a>
					</div>
					<div class="pages">   
        	 <div class="limiter visible-desktop">
               <label>Show</label>
                  <select>
                            <option value="" selected="selected">
                    9                </option>
                            <option value="">
                    15                </option>
                            <option value="">
                    30                </option>
                  </select> per page        
               </div>
       	   </div>
					<div class="clearfix"></div>
					<ul>
      @{
          foreach (var item in Model) { 

					  <li>
							<a class="cbp-vm-image" >
							 <div class="view view-first">
					   		  <div class="inner_content clearfix">
								<div class="product_image">
                                    <img src="~/Content/images/@item.image" class="img-responsive" alt="" />
									<div class="product_container">
									   <div class="cart-left">
										 <p class="title">Product ID:@item.Id</p>
									   </div>
									   <div class="price">@item.price</div>
									   <div class="clearfix"></div>
								     </div>		
								  </div>
			                     </div>
		                      </div>
		                    </a>
                @{
              if (Session["email"] != null)
              {
                  
                <a class="cbp-vm-icon cbp-vm-add" href="~/Home/Cr?a=@item.Id&b=@item.price&d=@item.image">Add to cart</a>
               // <h4><a class="item_add" href="/Home/Create?a=@item.Id&b=@item.price&d=@item.image"><i></i></a> <span class=" item_price">$ @item.price</span></h4>
              }
              else
              {
              <a class="cbp-vm-icon cbp-vm-add">Add to cart</a>

                //<p><a class="item_add" href="#"><i></i></a> <span class=" item_price">$ @item.price</span></p>
              }
                }
							
						</li>
      }
                        }

						
					</ul>


				</div>
				<link href="~/Content/css/component.css" rel='stylesheet' type='text/css' />
                <script src="~/Scripts/cbpViewModeSwitch.js" type="text/javascript"></script>
                <script src="~/Scripts/classie1.js" type="text/javascript"></script>
		</div>
		<div class="clearfix"> </div>
	</div>
</div>   	
</div>   

   
</body>		